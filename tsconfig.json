{
	"compilerOptions": {
		"forceConsistentCasingInFileNames": true,
		"importHelpers": false,
		"isolatedModules": true,
		"jsx": "react-jsx",
		"jsxImportSource": "preact",
		"lib": ["ESNext", "DOM"],
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"outDir": "dist",
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"target": "ES2020",
		"useDefineForClassFields": true,
		"typeRoots": ["types", "node_modules/@types"]
	}
}
